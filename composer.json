{
    "name": "radarlog/micker",
    "description": "A microservice calculating the Mars Sol Date (MSD) and the Martian Coordinated Time (MTC) based on the time on Earth in UTC",
    "keywords": [
        "REST",
        "SOLID",
        "Mars Sol Date",
        "Martian Coordinated Time"
    ],
    "type": "project",
    "license": "MIT",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "composer-plugin-api": "^2.3",
        "composer-runtime-api": "^2.2",
        "php-di/php-di": "^6.4",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "slim/slim": "^4.10"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.17.0",
        "slevomat/coding-standard": "^7.2",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^4.23"
    },
    "autoload": {
        "psr-4": {
            "Radarlog\\Micker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Radarlog\\Micker\\Tests\\": "tests/"
        }
    }
}
