{
    "name": "radarlog/micker",
    "description": "A microservice calculating the Mars Sol Date (MSD) and the Martian Coordinated Time (MTC) based on the time on Earth in UTC",
    "keywords": [
        "REST",
        "SOLID",
        "Mars Sol Date",
        "Martian Coordinated Time"
    ],
    "type": "project",
    "license": "MIT",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "~7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "slim/slim": "^4.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.58",
        "phpunit/phpunit": "^9.4",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Radarlog\\Micker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Radarlog\\Micker\\Tests\\": "tests/"
        }
    }
}
